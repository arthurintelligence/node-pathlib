{
  "name": "node-pathlib",
  "type": "module",
  "version": "0.0.1",
  "description": "A port of Python PEP 428, \"pathlib\" module, to node",
  "main": "lib/index.js",
  "scripts": {
    "docs:generate": "jsdoc lib -r -c jsdoc.json -R README.md -d docs",
    "docs:serve": "serve -l 3000 ./docs",
    "lint": "standard",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arthurintelligence/node-pathlib.git"
  },
  "keywords": [
    "pep-428",
    "python",
    "pathlib",
    "purepath"
  ],
  "author": "Philippe Hebert <philippe@human.space>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arthurintelligence/node-pathlib/issues"
  },
  "homepage": "https://github.com/arthurintelligence/node-pathlib#readme",
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "babel-jest": "^29.7.0",
    "docdash": "^2.0.2",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "jsdoc-to-markdown": "^8.0.1",
    "prettier": "^3.2.5",
    "serve": "^14.2.1"
  },
  "jest": {
    "rootDir": ".",
    "roots": [
      "<rootDir>"
    ],
    "modulePaths": [
      "<rootDir>"
    ]
  }
}
