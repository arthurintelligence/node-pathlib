{
  "name": "node-pathlib",
  "version": "0.0.1",
  "description": "A port of Python PEP 428, \"pathlib\" module, to node",
  "type": "module",
  "main": "lib/index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "ci": "npx prettier --check . && npx eslint ",
    "format": "npm run prettier:fix && npm run lint:fix",
    "docs:generate": "npx jsdoc lib -r -c jsdoc.json -R README.md -d docs",
    "docs:serve": "npx serve -l 3000 ./docs",
    "lint:check": "npx eslint lib test --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npx eslint lib test --report-unused-disable-directives --max-warnings 0 --fix",
    "prettier:check": "npx prettier --check lib test",
    "prettier:fix": "npx prettier --write lib test",
    "test:unit": "npx jest",
    "prepare": "npx husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arthurintelligence/node-pathlib.git"
  },
  "keywords": [
    "pep-428",
    "python",
    "pathlib",
    "purepath"
  ],
  "author": "Philippe Hebert <philippe@human.space>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arthurintelligence/node-pathlib/issues"
  },
  "homepage": "https://github.com/arthurintelligence/node-pathlib#readme",
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "babel-jest": "^29.7.0",
    "docdash": "^2.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "jsdoc-to-markdown": "^8.0.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "serve": "^14.2.1",
    "standard": "^17.1.0"
  },
  "jest": {
    "rootDir": ".",
    "roots": [
      "<rootDir>"
    ],
    "modulePaths": [
      "<rootDir>"
    ]
  },
  "lint-staged": {
    "**/*": "npm run format"
  }
}
